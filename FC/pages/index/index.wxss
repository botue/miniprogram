
page {
  background-color: #F0F0F0;
}

swiper {
  height: 320rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
  background: #D8D8D8 url(https://static.botue.com/paradise/images/blank.png) no-repeat center;
  background-size: 130rpx auto;
}

/*活动*/
.activity {
  padding-bottom: 24rpx;
}

 .activity .title {
  display: block;
  padding-left: 30rpx;
  margin: 24rpx 0;
  font-size: 16px;
  font-weight: bold;
  color: #3C3C3C;
 }

.activity .item {
  margin-top: 30rpx;

  position: relative;
}

.activity .item .status {
  width: 140rpx;
  height: 60rpx;
  text-align: center;
  line-height: 58rpx;
  background: url(https://static.botue.com/paradise/images/status_default.png);
  background-size: cover;
  font-size: 12px;
  color: #FFF;

  position: absolute;
  top: -8rpx;
  left: 30rpx;
}

.activity .item .active {
  background-image: url(https://static.botue.com/paradise/images/status_active.png);
}

.activity .collect {
  display: block;
  width: 60rpx;
  height: 60rpx;
  padding: 20rpx 30rpx;
  text-align: right;
  font-size: 24px;
  /*color: #FFF;*/

  position: absolute;
  top: 0;
  right: 0;
}

.activity .done {
  color: #FECA49;
}

 .activity .item .thumb {
  display: block;
  width: 100%;
  height: 320rpx;
  background: #D8D8D8 url(https://static.botue.com/paradise/images/placeholder.png) no-repeat center;
  background-size: 260rpx auto;
 }

.activity .item .meta {
  padding: 15rpx 30rpx;
  background-color: #FFF;

  position: relative;
}

.activity .meta .name {
  display: block;
  line-height: 1.5;
  margin-right: 120rpx;
  font-size: 15px;
  color: #3C3C3C;
}

.activity .meta .extra {
  display: block;
  line-height: 1.5;
  margin-top: 24rpx;
  font-size: 11px;
  color: #B4B4B4;
}

.activity .extra .icon {
  margin-right: 12px;
}

.activity .meta .type {
  line-height: 1.5;
  font-size: 15px;
  color: #FE6249;
  position: absolute;
  top: 15rpx;
  right: 30rpx;
}






